{
    "apps": {
        "name": "homepage",
        "cwd": "./",
        "script": "./node_modules/@vue/cli-service/bin/vue-cli-service.js",
        "args": "serve --port 7302",
        "merge_logs": true,
        "out_file": "~/logs/homepage-pm2-default.log",
        "error_file": "~/logs/homepage-pm2-error.log",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "instances": "1",
        "max_memory_restart": "128M",
        "exec_mode": "cluster",
        "env_test": {
            "NODE_ENV": "test"
        },
        "env_development": {
            "NODE_ENV": "development"
        },
        "env_stage": {
            "NODE_ENV": "stage"
        },
        "env_production": {
            "NODE_ENV": "production"
        }
    }
}
